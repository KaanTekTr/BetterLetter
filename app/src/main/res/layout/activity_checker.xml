<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#84B7C5"
    tools:context=".CheckerActivity">

    <Button
        android:id="@+id/typo_button_id"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/enhance_button"
        android:text="Check it!"
        android:textColor="#999"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp" />

    <EditText
        android:id="@+id/typo_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="73dp"
        android:background="@android:color/transparent"
        android:hint="Start typing..."
        android:cursorVisible="true"
        android:textSize="20dp"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/word_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="167dp"
        android:layout_marginLeft="167dp"
        android:layout_marginTop="26dp"
        android:textSize="15dp"
        android:textColor="#555" />


</RelativeLayout>